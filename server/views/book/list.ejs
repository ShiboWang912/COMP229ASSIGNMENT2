<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
  <!--add boostrap table code-->
  <div class="jumbotron">
  <div class="row">
    <div class="col-md-offset-3 col-md-8">
      <h1><%=title %></h1>
      <a href="/contact-list/add" class="btn btn-primary" role="button">
      <i class ="fas fa-plus-circle"></i> Add a Contact Person

      </a>
      <br />
   

      <table class="table table-bordered table-striped table-hover" id="myTable">
        <!--HEader row-->
        <tr>
          <th class="text-center">Contact Name</th>
          <th class="text-center">Email Address</th>
          <th class="text-center">Contact Number</th>
          <!-- <th class="text-center">Descripotion</th>
          <th class="text-center">Contact Age</th> -->
          <th class="text-center"></th>
          <th class="text-center"></th>
        </tr>



        <!--Repetable Templet row-->
        <% for (let count=0; count<BookList.length; count++){%>
          <tr>
            <td class="text-centre "><%=BookList[count].name %></td>
            <td class="text-centre "><%=BookList[count].author %></td>
            <td class="text-centre "><%=BookList[count].published %></td>
            <!-- <td class="text-centre "></td>
            <td class="text-centre "></td> -->
            <td class="text-center col-1">
              <a href="/contact-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
              <i class="fas fa-pencil-alt"></i> Edit</a>
          </td>
          <td class="text-center col-1">
              <a href="/contact-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
              <i class="fas fa-trash-alt"></i> Delete</a>
          </td>
          </tr>
        <%}%>
      </table>
      <!--to sort the table by name-->
      
    </div>
  </div>
  </div>
</main>


<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>

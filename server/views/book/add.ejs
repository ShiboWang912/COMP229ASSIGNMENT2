<!-- Content  for the add page -->
<div class="jumbotron">
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Contact Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact Name:"
            name="name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">Email Address</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter the Email Address:"
            name="author"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">Contact Number</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter the Contact Number:"
            name="published"
            required
          />
        </div>

        <div class="from-group">
          <label for="descTextField">Description</label>
          <textarea
            type="text"
            class="form-control"
            id="descTextField"
            placeholder="Enter the Description of Contact Person:"
            name="description"
            required
          ></textarea>
        </div>

        <div class="from-group">
          <label for="priceTextField">Age</label>
          <input
            type="number"
            class="form-control"
            id="pricecTextField"
            placeholder="Enter the Contact Person Age:"
            name="price"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
  </div>
